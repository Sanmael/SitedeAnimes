@model SitedeAnimes.Models.Anime

@{
    ViewData["Title"] = "Create";
}
<div class="text-center" >
    <h3>Adicionar Novo Anime</h3>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-lg-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeDoDiretor" class="control-label"></label>
                    <input asp-for="NomeDoDiretor" class="form-control" />
                    <span asp-validation-for="NomeDoDiretor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumeroDeEpisodios" class="control-label"></label>
                    <input asp-for="NumeroDeEpisodios" class="form-control" />
                    <span asp-validation-for="NumeroDeEpisodios" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            <div class="form-group">
                <label asp-for="NumeroDeTemporadas" class="control-label"></label>
                <input asp-for="NumeroDeTemporadas" class="form-control" />
                <span asp-validation-for="NumeroDeTemporadas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoDeLancamento" class="control-label"></label>
                <input asp-for="AnoDeLancamento" class="form-control" />
                <span asp-validation-for="AnoDeLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteAssistirAnime" class="control-label"></label>
                <input asp-for="SiteAssistirAnime" class="form-control" />
                <span asp-validation-for="SiteAssistirAnime" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUrlPagina" class="control-label"></label>
                <input asp-for="ImagemUrlPagina" class="form-control" />
                <span asp-validation-for="ImagemUrlPagina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUrl" class="control-label"></label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAnimePreferido" /> @Html.DisplayNameFor(model => model.IsAnimePreferido)
                </label>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Para Lista</a>
</div>

