@model ReflectionIT.Mvc.Paging.PagingList<SitedeAnimes.Models.Anime>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Cadastro Animes</h3>
<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">Procurar</button>
</form>
Total de Animes : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<p>
    <a asp-action="Create" class="badge badge-success">Adicionar Anime</a>
</p>
<div class="row"> 
    <div class="col-md-12">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SiteAssistirAnime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Genero)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-danger text-dark">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SiteAssistirAnime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genero.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AnimeId" class="badge badge-secondary">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.AnimeId" class="badge badge-info">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.AnimeId" class="badge badge-danger">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
