@model HomeViewModel

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://i.pinimg.com/originals/5b/26/26/5b262629a153363a7f0e150a6ca9dffb.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.pinimg.com/originals/a9/db/d6/a9dbd64a85d59e3cbd9e89beab8968f7.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/32f72a50-8aa2-446e-af22-8ea31e2c4670/d8nzi00-ece87f1d-b8d4-4523-bc2e-fd62c87ed7d7.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..96qYUQzsaJWaEeLpMT54W_IyAMowYw4KPys_OVuUaUo" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="card-body">
    <h4 class="card text-center">Os Animes Preferidos da Semana</h4>
    <div class="row">
        @foreach (var anime in Model.AnimesPreferidos)
        {
            <partial name="_AnimesResumo" for="@anime" />
        }
    </div>
</div>